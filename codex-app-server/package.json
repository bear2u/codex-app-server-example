{
  "name": "codex-app-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @codex-app/shared-contracts build",
    "dev": "tsx watch src/main.ts",
    "prebuild": "pnpm --filter @codex-app/shared-contracts build",
    "build": "tsc -p tsconfig.build.json",
    "start": "tsx src/main.ts",
    "pretypecheck": "pnpm --filter @codex-app/shared-contracts build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@codex-app/shared-contracts": "workspace:*",
    "@fastify/cors": "11.1.0",
    "dotenv": "17.2.3",
    "fastify": "5.6.2",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/node": "24.6.1",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
