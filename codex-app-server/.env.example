NODE_ENV=development
HOST=127.0.0.1
PORT=4000
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# codex CLI
CODEX_BIN=codex
CODEX_CWD=/absolute/path/to/your/project
CODEX_MODEL=gpt-5.2-codex
CODEX_APPROVAL_POLICY=on-request
CODEX_WRITABLE_ROOTS=/absolute/path/to/your/project
CODEX_NETWORK_ACCESS=true

# SSE
SSE_HEARTBEAT_MS=15000

# Thread message pagination (default page size for /v1/threads/:threadId/messages)
THREAD_MESSAGES_PAGE_SIZE=10
