NODE_ENV=development
HOST=127.0.0.1
PORT=4000
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# codex CLI
CODEX_BIN=codex
CODEX_CWD=/absolute/path/to/your/project
CODEX_MODEL=gpt-5.3-codex
CODEX_APPROVAL_POLICY=on-request
CODEX_WRITABLE_ROOTS=/absolute/path/to/your/project
CODEX_NETWORK_ACCESS=true
HTTP_BODY_LIMIT_MB=20

# SSE
SSE_HEARTBEAT_MS=15000

# Thread message pagination (default page size for /v1/threads/:threadId/messages)
THREAD_MESSAGES_PAGE_SIZE=10

# Tunnel (Docker Compose + nginx gateway)
TUNNEL_COMMAND=ngrok
TUNNEL_PROVIDER_HOST=https://ngrok.app
# Required for ngrok tunnel start (from ngrok dashboard)
NGROK_AUTHTOKEN=
TUNNEL_LOCAL_HOST=nginx
TUNNEL_LOCAL_PORT=80
TUNNEL_START_TIMEOUT_MS=12000
TUNNEL_SESSION_COOKIE_NAME=codex_tunnel_session
TUNNEL_LOGIN_DELAY_MS=500
TUNNEL_LOGIN_JITTER_MS=250
